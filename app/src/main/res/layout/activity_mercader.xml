<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MercaderActivity">

    <ImageView
        android:id="@+id/mercaderF"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:contentDescription="imagen de un mercader"
        android:src="@drawable/mercader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <Button
        android:id="@+id/comprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="108dp"
        android:text="@string/comprar"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/comerciar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mercaderF" />

    <Button
        android:id="@+id/vender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:text="@string/vender"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/continuarM"
        app:layout_constraintStart_toEndOf="@id/comprar"
        app:layout_constraintTop_toBottomOf="@+id/mercaderF"
        app:layout_constraintVertical_bias="0.006" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="144dp"
        android:text="@string/cancelar"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/continuarM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/vender"
        app:layout_constraintTop_toBottomOf="@+id/mercaderF"
        app:layout_constraintVertical_bias="0.973" />

    <Button
        android:id="@+id/comerciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:text="@string/comerciar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/continuarM"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/continuarM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="136dp"
        android:text="@string/continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/precioObjetos"
        android:layout_width="133dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/continuarM"
        app:layout_constraintEnd_toEndOf="@id/unidadesArticulo"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mercaderF"
        app:layout_constraintVertical_bias="0.466" />

    <TextView
        android:id="@+id/sinArticulosVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="224dp"
        android:visibility="invisible"
        android:text="No tienes articulos en la mochila"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mercaderF"
        app:layout_constraintVertical_bias="0.959" />

    <EditText
        android:id="@+id/unidadesArticulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="260dp"
        android:visibility="invisible"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mercaderF"
        app:layout_constraintVertical_bias="0.0"
        />


</androidx.constraintlayout.widget.ConstraintLayout>